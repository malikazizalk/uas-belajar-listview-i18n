<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_b"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/txtberitatentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Berita Tentang"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/gambarBerita"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/eb_biomassa"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/txtjudulberita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Berita"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/txtasal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Asal" />
    <TextView
        android:id="@+id/txtdeskripsibiodata"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Deskripsi Biodata" />

    <Button
        android:id="@+id/btn_back_to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/go_back"
        />


</LinearLayout>