<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="4dp">
    <ImageView
        android:id="@+id/row_image_berita"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/eb_biomassa"
        />

    <LinearLayout
        android:layout_toLeftOf="@id/row_image_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/row_text_topik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:text="Biomassa"/>
        <TextView
            android:id="@+id/row_text_asal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#888"
            android:text="Tumbuhan dan organisme yang baru hidup"/>

    </LinearLayout>


</RelativeLayout>